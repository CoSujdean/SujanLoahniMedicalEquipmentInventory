@using MedInvEquip.ViewModels;
@model AddEquipmentViewModel;

@* @model MedicalEquipment.ViewModels.AddEquipmentViewModel *@


<h1>Add Equipments</h1>


<form method="post">

    <div class="mt-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name"/>
    </div>

    <div class="mt-3">
        <label class="form-label">Description</label>
        <input type="text" class="form-control" asp-for="Description"/>
    </div>

    <div class="mt-3">
        <label class="form-label">Quantity</label>
        <input type="number" class="form-control" asp-for="Quantity"/>
    </div>

    <div class="mt-3">
        <label class="form-label">Price</label>
        <input type="number" class="form-control" asp-for="Price" />
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>

</form>